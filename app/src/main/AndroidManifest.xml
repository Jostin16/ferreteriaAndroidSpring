<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="idat.com.minimarketapispring">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppMinimarketSpring"
        android:usesCleartextTraffic="true">
        <activity android:name="idat.com.appferreteria.view.CarritoActivity"></activity>
        <activity android:name="idat.com.appferreteria.view.Registrar_Activity"></activity>
        <activity android:name="idat.com.appferreteria.view.DetalleProductoActivity"></activity>
        <activity android:name="idat.com.appferreteria.view.ProductoActivity" />
        <activity android:name="idat.com.appferreteria.view.LoginActivity" />
        <activity android:name="idat.com.appferreteria.view.CategoriaActivity" />
        <activity android:name="idat.com.appferreteria.view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="idat.com.appferreteria.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppMinimarketSpring.NoActionBar" />
    </application>

</manifest>